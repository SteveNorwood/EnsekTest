@model IEnumerable<EnsekTest.Shared.Entities.MeterReading>

@{
    ViewData["Title"] = "Meter Readings";
}

<h1>Meter Readings</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Account Id
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MeterReadingDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MeterReadValue)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.ActionLink(item.AccountId.ToString(), "Details", "Accounts", new { id = item.AccountId })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MeterReadingDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MeterReadValue)
            </td>
        </tr>
}
    </tbody>
</table>
